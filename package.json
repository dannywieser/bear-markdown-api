{
  "name": "@dannywieser/bear-markdown-api",
  "version": "2.1.0",
  "keywords": [
    "markdown",
    "bear",
    "api"
  ],
  "description": "An read-only API for interacting with your markdown notes in Bear.",
  "homepage": "https://github.com/dannywieser/bear-markdown-api#readme",
  "bugs": {
    "url": "https://github.com/dannywieser/bear-markdown-api/issues"
  },
  "bin": {
    "bear-markdown-api": "./dist/server/startup.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dannywieser/bear-markdown-api.git"
  },
  "license": "MIT",
  "author": "Danny Wieser",
  "main": "dist/index.js",
  "types": "dist/types.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/server.d.ts",
      "import": "./dist/server/server.js",
      "require": "./dist/server/server.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "ci": "npm run lint && npm run test && npm run build",
    "start": "node ./dist/server/startup.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' ./src/server/startup.ts",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@eslint/js": "9.37.0",
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/morgan": "1.9.10",
    "@types/node": "24.9.1",
    "@types/supertest": "6.0.3",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-perfectionist": "4.15.1",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.4.0",
    "jest": "30.2.0",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "supertest": "7.1.4",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2"
  },
  "dependencies": {
    "date-fns": "4.1.0",
    "express": "5.1.0",
    "marked": "16.4.0",
    "morgan": "1.10.1",
    "sqlite": "5.1.1",
    "sqlite3": "5.1.7"
  }
}
